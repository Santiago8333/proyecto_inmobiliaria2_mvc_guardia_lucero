@model List<Propietario>
@{
    ViewData["Title"] = "Propiedades";
}
<div class="container mt-5" style="padding-top: 10px;">
<div class="row">
<div class="col-md-12 history bg-light border-right">
<h1>Propietarios</h1>
<div class="table-responsive">
<table class="table table-hover table-sm">
<thead>
    <tr>
    <th scope="col">#</th>
    <th scope="col">Dni</th>
    <th scope="col">Email</th>
    <th scope="col">Nombre</th>
    <th scope="col">Apellido</th>
    <th scope="col">Telefono</th>
    </tr>
</thead>
<tbody>
@if (Model != null && Model.Any())
{
    int i = 1;
    foreach (var p in Model)
    {
        <tr>
            <td>@i</td>
            <td>@p.Dni</td>
            <td>@p.Email</td>
            <td>@p.Nombre</td>
            <td>@p.Apellido</td>
            <td>@p.Telefono</td>
        </tr>
        i++;
    }
}
else
{
    <tr>
        <td colspan="6" class="text-center text-muted">No hay propietarios cargados</td>
    </tr>
}
</tbody>
</table>
</div>
<button type="button" class="btn btn-primary agregar" data-bs-toggle="modal" data-bs-target="#agregarModal">Agregar</button>
</div>
</div>
</div>
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item" id="prevPageContainer">
            <a class="page-link" href="#" id="prevPage">Anterior</a>
        </li>
        <li class="page-item" id="nextPageContainer">
            <a class="page-link" href="#" id="nextPage">Siguiente</a>
        </li>
    </ul>
</nav>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar Propietarios</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-action="Agregar" method="post" id="formAgregarPropietario">
            <div class="mb-3">
            <label for="exampleInputDni" class="form-label">Dni</label>
            <input type="text" class="form-control" id="exampleInputDni" name="Dni">
        </div>
        <div class="mb-3">
            <label for="exampleInputApellido" class="form-label">Apellido</label>
            <input type="text" class="form-control" id="exampleInputApellido"  name="Apellido">
        </div>
        <div class="mb-3">
            <label for="exampleInputNombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="exampleInputNombre"  name="Nombre">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email</label>
            <input type="email" class="form-control" id="exampleInputEmail1" name="Email">
        </div>
        <div class="mb-3">
            <label for="exampleInputTelefono" class="form-label">Telefono</label>
            <input type="text" class="form-control" id="exampleInputTelefono"  name="Telefono">
        </div>
        <button type="submit" class="btn btn-primary" >Agregar</button>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
