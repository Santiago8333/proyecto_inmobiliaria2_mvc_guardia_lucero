@model proyecto_inmobiliaria2_mvc_guardia_lucero.Models.Usuarios
@{
    ViewData["Title"] = "Usuario Perfil";
}

<div class="container mt-5" style="padding-top: 10px;">
    <h1>Perfil</h1>

    <form asp-action="ActualizarPerfil" method="post" class="needs-validation" novalidate>
        <div class="row">
            <div class="col-md-6">
                <label for="Dni" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required/>
                <div class="invalid-feedback">El Nombre es obligatorio.</div>
                <input type="hidden" id="Id_usuario" name="Id_usuario" value="@Model.Id_usuario" required/>
            </div>

            <div class="col-md-6">
                <label for="Apellido" class="form-label">Apellido</label>
                <input type="text" class="form-control" id="Apellido" name="Apellido" value="@Model.Apellido" required/>
                <div class="invalid-feedback">El Apellido es obligatorio.</div>
            </div>

            <div class="col-md-6">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required/>
                <div class="invalid-feedback">Ingrese un email v치lido.</div>
            </div>

            <!-- Botones alineados -->
            <div class="col-md-12 mt-3 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Actualizar</button>
                
            </div>
        </div>
    </form>
     <h1>Editar Clave</h1>
    <form asp-action="ActualizarPerfilClave" method="post" class="needs-validation" novalidate>
        <div class="row">
            <div class="col-md-6">
                <label for="Password" class="form-label">Nueva Contrase침a</label>
                <input type="password" class="form-control" id="Password" name="Clave" required>
                <div class="invalid-feedback">El Password es obligatorio.</div>
                <input type="hidden" id="Id_usuario" name="Id_usuario" value="@Model.Id_usuario" required/>
            </div>
            <div class="col-md-6">
                <label for="OldClave" class="form-label">Contrase침a Actual</label>
                <input type="password" class="form-control" id="OldClave" name="OldClave" required>
                <div class="invalid-feedback">El Contrase침a Actual es obligatorio.</div>
                <input type="hidden" id="Id_usuario" name="Id_usuario" value="@Model.Id_usuario" required/>
            </div>

            <!-- Botones alineados -->
            <div class="col-md-12 mt-3 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Actualizar</button>
                
            </div>
        </div>
    </form>
     <h1>Editar Avatar</h1>
    <form asp-action="ActualizarPerfilAvatar" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-md-6">
            <label for="AvatarFile" class="form-label">Avatar</label>
            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
            {
                <img src="@Model.AvatarUrl" alt="avatar" width="30" height="20" style="object-fit:cover;" />
            }
            else
            {
                <span>Sin imagen</span>
            }
            <input class="form-control form-control-sm" id="AvatarFile" name="AvatarFile" type="file" >
            <input type="hidden" id="Id_usuario" name="Id_usuario" value="@Model.Id_usuario" required/>
        </div>

        <!-- Botones alineados -->
        <div class="col-md-12 mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Actualizar</button>
            <a class="btn btn-secondary" asp-action="Index">Volver</a>
        </div>
    </div>
</form>
</div>
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="successToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto">Sistema</strong>
      <small class="text-muted">justo ahora</small>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Cerrar"></button>
    </div>
    <div class="toast-body">
      @TempData["Mensaje"]
    </div>
  </div>
</div>
<script>
document.addEventListener("DOMContentLoaded", function () {
    var toastElement = document.getElementById("successToast");
    var toast = new bootstrap.Toast(toastElement);
    
    @if (TempData["Mensaje"] != null)
    {
        <text>
            toast.show();
        </text>
    }

});

</script>
