@model List<proyecto_inmobiliaria2_mvc_guardia_lucero.Models.Inmuebles>
@{
    ViewData["Title"] = "Inmuebles";
}
<div class="container mt-5" style="padding-top: 10px;">
<div class="row">
<div class="col-md-12 history bg-light border-right">
<h1>Inmuebles</h1>
<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-2">
        <label for="email" class="form-label">Email del Propietario</label>
        <input type="text" name="email" id="email" class="form-control" value="@ViewBag.EmailFilter" placeholder="ejemplo@dominio.com">
    </div>
    <div class="col-md-2">
        <label for="estado" class="form-label">Estado</label>
        <select name="estado" id="estado" class="form-select">
            <option value="">Todos</option>
            <option value="true" selected="@(ViewBag.EstadoFilter == true)">Activos</option>
            <option value="false" selected="@(ViewBag.EstadoFilter == false)">Inactivos</option>
        </select>
    </div>
    <div class="col-md-2">
        <label for="fechaInicio" class="form-label">Desde</label>
        <input type="date" name="fechaInicio" id="fechaInicio" class="form-control" value="@(ViewBag.FechaInicioFilter?.ToString("yyyy-MM-dd"))">
    </div>
    <div class="col-md-2">
        <label for="fechaFin" class="form-label">Hasta</label>
        <input type="date" name="fechaFin" id="fechaFin" class="form-control" value="@(ViewBag.FechaFinFilter?.ToString("yyyy-MM-dd"))">
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary me-2">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
    </div>
</form>
<div class="table-responsive">
<table class="table table-hover table-sm">
<thead>
    <tr>
    <th scope="col">#</th>
    <th scope="col">Email Propietario</th>
    <th scope="col">Uso</th>
    <th scope="col">Tipo</th>
    <th scope="col">Ambiente</th>
    <th scope="col">Precio</th>
    <th scope="col">Portada</th>
    <th scope="col">Fecha de Creacion</th>
    @if (User.IsInRole("Administrador"))
    {
    <th scope="col">Creado por</th>
    <th scope="col">Desactivado por</th>
    }
    <th scope="col">Estado</th>
    <th scope="col">Accion</th>
    </tr>
</thead>
<tbody>
@if (Model != null && Model.Any())
{
    int i = 1;
    foreach (var p in Model)
    {
    if(p.Estado){
        <tr>
            <td>@i</td>
            <td>@Html.DisplayFor(modelp => p.EmailPropietario)</td>
            <td>@Html.DisplayFor(modelp => p.Uso)</td>
            <td>@Html.DisplayFor(modelp => p.Tipo)</td>
            <td>@Html.DisplayFor(modelp => p.Ambiente)</td>
            <td>@Html.DisplayFor(modelp => p.Precio)</td>
            <td>
            @if (!string.IsNullOrEmpty(p.Portada))
            {
                <img src="~/images/inmuebles/@p.Portada" alt="Portada" width="50" height="30" style="object-fit:cover;" />
            }
            else
            {
                <span>Sin imagen</span>
            }
            </td>
            <td>@p.Fecha_creacion.ToString("dd/MM/yyyy")</td>
            @if (User.IsInRole("Administrador"))
                {
                    <td>@Html.DisplayFor(modelp => p.Creado_por)</td>
                    <td>@Html.DisplayFor(modelp => p.Desactivado_por)</td>
                }
            <td>@(p.Estado ? "Activo" : "Desactivado")</td>
            <td>
    <div class="dropdown position-static">
        <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i> <!-- Icono de 3 puntos -->
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item" asp-action="Edicion" asp-route-id="@p.Id_inmueble" title="Editar">
                     <i class="fa-solid fa-pencil"></i> Modificar
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-action="Detalle" asp-route-id="@p.Id_inmueble" title="Detalle">
                     <i class="fa-solid fa-book"></i> Detalle
                </a>
            </li>
            <li>
                <a href="javascript:void(0);" 
                      data-id="@p.Id_inmueble" 
                      class="dropdown-item" 
                      onclick="confirmDesactivar(this)">
                        <i class="fa-solid fa-x"></i> Desactivar
                  </a>
            </li>
            @if (User.IsInRole("Administrador"))
                {
            <li>
                <a href="javascript:void(0);" 
                      data-id="@p.Id_inmueble" 
                      class="dropdown-item" 
                      onclick="confirmDelete(this)">
                        <i class="fa-solid fa-trash"></i> Eliminar
                  </a>
            </li>
            }
        </ul>
    </div>
</td>
        </tr>
        i++;
        }else{
            <tr class="table-danger">
            <td>@i</td>
            <td>@Html.DisplayFor(modelp => p.EmailPropietario)</td>
            <td>@Html.DisplayFor(modelp => p.Uso)</td>
            <td>@Html.DisplayFor(modelp => p.Tipo)</td>
            <td>@Html.DisplayFor(modelp => p.Ambiente)</td>
            <td>@Html.DisplayFor(modelp => p.Precio)</td>
            <td>
            @if (!string.IsNullOrEmpty(p.Portada))
            {
                <img src="~/images/inmuebles/@p.Portada" alt="Portada" width="50" height="30" style="object-fit:cover;" />
            }
            else
            {
                <span>Sin imagen</span>
            }
            </td>
            <td>@p.Fecha_creacion.ToString("dd/MM/yyyy")</td>
            @if (User.IsInRole("Administrador"))
              {
                  <td>@Html.DisplayFor(modelp => p.Creado_por)</td>
                  <td>@Html.DisplayFor(modelp => p.Desactivado_por)</td>
              }
            <td>@(p.Estado ? "Activo" : "Desactivado")</td>
            <td>
    <div class="dropdown position-static">
        <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i> <!-- Icono de 3 puntos -->
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item" asp-action="Edicion" asp-route-id="@p.Id_inmueble" title="Editar">
                     <i class="fa-solid fa-pencil"></i> Modificar
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-action="Detalle" asp-route-id="@p.Id_inmueble" title="Detalle">
                     <i class="fa-solid fa-book"></i> Detalle
                </a>
            </li>
            <li>
                <a href="javascript:void(0);" 
                      data-id="@p.Id_inmueble" 
                      class="dropdown-item" 
                      onclick="confirmActivate(this)">
                      <i class="fa-solid fa-check"></i> Activar
                  </a>
            </li>
            @if (User.IsInRole("Administrador"))
                {
            <li>
                <a href="javascript:void(0);" 
                      data-id="@p.Id_inmueble" 
                      class="dropdown-item" 
                      onclick="confirmDelete(this)">
                        <i class="fa-solid fa-trash"></i> Eliminar
                  </a>
            </li>
            }
        </ul>
    </div>
</td>
        </tr>
        i++;
        }
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center text-muted">No hay inmuebles cargados</td>
    </tr>
}
</tbody>
</table>
</div>
<button type="button" class="btn btn-primary agregar" data-bs-toggle="modal" data-bs-target="#agregarModal"><i class="fa-solid fa-plus"></i></button>
</div>
</div>
</div>
<!-- PAGINACIÓN -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <!-- Botón Anterior -->
        <li class="page-item @(ViewBag.PaginaActual == 1 || !ViewBag.Registros ? "disabled" : "")">
            <a class="page-link" 
               href="@Url.Action("Index", new { pagina = ViewBag.PaginaActual - 1 })" 
               tabindex="-1">
                Anterior
            </a>
        </li>

        <!-- Números de página -->
        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
        {
            <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = i })">@i</a>
            </li>
        }

        <!-- Botón Siguiente -->
        <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas || !ViewBag.Registros ? "disabled" : "")">
            <a class="page-link" 
               href="@Url.Action("Index", new { pagina = ViewBag.PaginaActual + 1 })">
                Siguiente
            </a>
        </li>
    </ul>
</nav>
<!-- Modal -->
<div class="modal fade" id="agregarModal" tabindex="-1" aria-labelledby="agregarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="agregarModalLabel">Agregar Inmuebles</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
<form asp-action="Agregar" enctype="multipart/form-data" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="InputEmailPropietario" class="form-label">Email Propietario</label>
        <input class="form-control" autocomplete="off" list="propietariosList" id="InputEmailPropietario" name="EmailPropietario" required>
        <datalist id="propietariosList">
            
        </datalist>
        <input type="hidden" id="Id_propietario" name="Id_propietario">
        <div class="invalid-feedback">El Email es obligatorio.</div>
        
    </div>


    <div class="mb-3">
        <label for="exampleInputUso" class="form-label">Uso</label>
                <select class="form-select" id="exampleInputUso" name="Uso">
                    <option value="Residencial">Residencial</option>
                    <option value="Comercial">Comercial</option>
        </select>
    </div>

    <div class="mb-3">
         <label for="exampleInputApellido" class="form-label">Tipo</label>
            <select class="form-select" id="exampleInputTipo" name="Tipo">
                    <option value="local">local</option>
                    <option value="depósito">deposito</option>
                    <option value="casa">casa</option>
                    <option value="departamento">departamento</option>
                </select>
    </div>
    <div class="mb-3">
        <label for="InputDireccion" class="form-label">Direccion</label>
        <input type="text" class="form-control" id="InputDireccion" name="Direccion" required>
        <div class="invalid-feedback">El Direccion es obligatorio.</div>
    </div>
    <div class="mb-3">
        <label for="InputAmbiente" class="form-label">Cantidad de Ambiente</label>
        <input type="number" class="form-control" id="InputAmbiente" name="Ambiente" required>
        <div class="invalid-feedback">El Ambiente es obligatorio.</div>
    </div>
    <div class="mb-3">
        <label for="InputPrecio" class="form-label">Precio del Inmueble</label>
        <input type="text" class="form-control" id="InputPrecio" name="Precio" required>
        <div class="invalid-feedback">El Precio es obligatorio.</div>
    </div>
    <div class="mb-3">
        <label for="InputLongitud" class="form-label">Longitud del Inmueble</label>
        <input type="text" class="form-control" id="InputLongitud" name="Longitud" required>
        <div class="invalid-feedback">El Longitud es obligatorio.</div>
    </div>
    <div class="mb-3">
        <label for="InputLatitud" class="form-label">Latitud del Inmueble</label>
        <input type="text" class="form-control" id="InputLatitud" name="Latitud" required>
        <div class="invalid-feedback">El Latitud es obligatorio.</div>
    </div>
    <div class="mb-3">
        <label for="InputPortada" class="form-label">Portada del Inmueble</label>
        <input type="file" class="form-control" id="InputPortada" name="PortadaFile" accept="image/*">
        <div class="invalid-feedback">La portada es obligatoria.</div>
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>
</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="successToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto">Sistema</strong>
      <small class="text-muted">justo ahora</small>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Cerrar"></button>
    </div>
    <div class="toast-body">
      @TempData["Mensaje"]
    </div>
  </div>
</div>
<!-- Modal eliminar-->
