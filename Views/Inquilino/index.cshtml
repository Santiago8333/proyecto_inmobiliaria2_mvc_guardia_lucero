@model List<Inquilinos>
@{
    ViewData["Title"] = "Inquilinos";
}
<div class="container mt-5" style="padding-top: 10px;">
<div class="row">
<div class="col-md-12 history bg-light border-right">
<h1>Inquilinos</h1>
<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <label for="email" class="form-label">Email del Inquilino</label>
        <input type="text" name="email" id="email" class="form-control" value="@ViewBag.EmailFilter" placeholder="ejemplo@dominio.com">
    </div>
    <div class="col-md-4 d-flex align-items-end">
        <button type="submit" class="btn btn-primary me-2">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
    </div>
</form>
<div class="table-responsive">
<table class="table table-hover table-sm">
<thead>
    <tr>
    <th scope="col">#</th>
    <th scope="col">Dni</th>
    <th scope="col">Email</th>
    <th scope="col">Nombre</th>
    <th scope="col">Apellido</th>
    <th scope="col">Telefono</th>
    <th scope="col">Fecha de Creacion</th>
    <th scope="col">Estado</th>
    @if (User.IsInRole("Administrador"))
    {
    <th scope="col">Creado por</th>
    }
    <th scope="col">Accion</th>
    </tr>
</thead>
<tbody>
@if (Model != null && Model.Any())
{
    int i = 1;
    foreach (var p in Model)
    {
      if(p.Estado){
        <tr>
            <td>@i</td>
            <td>@Html.DisplayFor(modelp => p.Dni)</td>
            <td>@Html.DisplayFor(modelp => p.Email)</td>
            <td>@Html.DisplayFor(modelp => p.Nombre)</td>
            <td>@Html.DisplayFor(modelp => p.Apellido)</td>
            <td>@Html.DisplayFor(modelp => p.Telefono)</td>
            <td>@p.Fecha_creacion.ToString("dd/MM/yyyy")</td>
            <td>@(p.Estado ? "Activo" : "Desactivado")</td>
            @if (User.IsInRole("Administrador"))
              {
              <td>@Html.DisplayFor(modelp => p.Creado_por)</td>
              }
            <td>
    <div class="dropdown position-static">
        <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i> <!-- Icono de 3 puntos -->
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item" asp-action="Edicion" asp-route-id="@p.Id_inquilino" title="Editar">
                     <i class="fa-solid fa-pencil"></i> Modificar
                </a>
            </li>
            <li>
                <a href="javascript:void(0);" 
                      data-id="@p.Id_inquilino" 
                      class="dropdown-item" 
                      onclick="confirmDesactivar(this)">
                        <i class="fa-solid fa-x"></i> Desactivar
                  </a>
            </li>
            @if (User.IsInRole("Administrador"))
            {
            <li>
                <a href="javascript:void(0);" 
                      data-id="@p.Id_inquilino" 
                      class="dropdown-item" 
                      onclick="confirmDelete(this)">
                        <i class="fa-solid fa-trash"></i> Eliminar
                  </a>
            </li>
            }
        </ul>
    </div>
</td>
        </tr>
        i++;
        }else{
          <tr class="table-danger">
            <td>@i</td>
            <td>@Html.DisplayFor(modelp => p.Dni)</td>
            <td>@Html.DisplayFor(modelp => p.Email)</td>
            <td>@Html.DisplayFor(modelp => p.Nombre)</td>
            <td>@Html.DisplayFor(modelp => p.Apellido)</td>
            <td>@Html.DisplayFor(modelp => p.Telefono)</td>
            <td>@p.Fecha_creacion.ToString("dd/MM/yyyy")</td>
            <td>@(p.Estado ? "Activo" : "Desactivado")</td>
            @if (User.IsInRole("Administrador"))
              {
              <td>@Html.DisplayFor(modelp => p.Creado_por)</td>
              }
            <td>
    <div class="dropdown position-static">
        <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i> <!-- Icono de 3 puntos -->
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item" asp-action="Edicion" asp-route-id="@p.Id_inquilino" title="Editar">
                     <i class="fa-solid fa-pencil"></i> Modificar
                </a>
            </li>
            <li>
                  <a href="javascript:void(0);" 
                            data-id="@p.Id_inquilino" 
                            class="dropdown-item" 
                            onclick="confirmActivate(this)">
                            <i class="fa-solid fa-check"></i> Activar
                        </a>
                  </li>
            @if (User.IsInRole("Administrador"))
            {
            <li>
                <a href="javascript:void(0);" 
                      data-id="@p.Id_inquilino" 
                      class="dropdown-item" 
                      onclick="confirmDelete(this)">
                        <i class="fa-solid fa-trash"></i> Eliminar
                  </a>
            </li>
            }
        </ul>
    </div>
</td>
        </tr>
        i++;
        }
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center text-muted">No hay inquilinos cargados</td>
    </tr>
}
</tbody>
</table>
</div>
<button type="button" class="btn btn-primary agregar" data-bs-toggle="modal" data-bs-target="#agregarModal"><i class="fa-solid fa-plus"></i></button>
</div>
</div>
</div>
<!-- PAGINACIÓN -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <!-- Botón Anterior -->
        <li class="page-item @(ViewBag.PaginaActual == 1 || !ViewBag.Registros ? "disabled" : "")">
            <a class="page-link" 
               href="@Url.Action("Index", new { pagina = ViewBag.PaginaActual - 1 })" 
               tabindex="-1">
                Anterior
            </a>
        </li>

        <!-- Números de página -->
        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
        {
            <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = i })">@i</a>
            </li>
        }

        <!-- Botón Siguiente -->
        <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas || !ViewBag.Registros ? "disabled" : "")">
            <a class="page-link" 
               href="@Url.Action("Index", new { pagina = ViewBag.PaginaActual + 1 })">
                Siguiente
            </a>
        </li>
    </ul>
</nav>
<!-- Modal -->
<div class="modal fade" id="agregarModal" tabindex="-1" aria-labelledby="agregarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="agregarModalLabel">Agregar Inquilino</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-action="Agregar" method="post" id="formAgregarInquilino" class="needs-validation" novalidate>
            <div class="mb-3">
            <label for="InputDni" class="form-label">Dni</label>
            <input type="text" class="form-control" id="InputDni" name="Dni" required>
            <div class="invalid-feedback">El DNI es obligatorio.</div>
        </div>
        <div class="mb-3">
            <label for="InputApellido" class="form-label">Apellido</label>
            <input type="text" class="form-control" id="InputApellido"  name="Apellido" required>
            <div class="invalid-feedback">El Apellido es obligatorio.</div>
        </div>
        <div class="mb-3">
            <label for="InputNombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="InputNombre"  name="Nombre" required>
             <div class="invalid-feedback">El Nombre es obligatorio.</div>
        </div>
        <div class="mb-3">
            <label for="InputEmail1" class="form-label">Email</label>
            <input type="email" class="form-control" id="InputEmail1" name="Email" required>
            <div class="invalid-feedback">Ingrese un email válido.</div>
        </div>
        <div class="mb-3">
            <label for="InputTelefono" class="form-label">Telefono</label>
            <input type="text" class="form-control" id="InputTelefono"  name="Telefono" required>
            <div class="invalid-feedback">El Teléfono es obligatorio.</div>
        </div>
        <button type="submit" class="btn btn-primary" >Agregar</button>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="successToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto">Sistema</strong>
      <small class="text-muted">justo ahora</small>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Cerrar"></button>
    </div>
    <div class="toast-body">
      @TempData["Mensaje"]
    </div>
  </div>
</div>
<!-- Modal eliminar-->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Eliminación</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ¿Estás seguro de que deseas eliminar este inquilino?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <a id="confirmDeleteButton" href="#" class="btn btn-danger">Eliminar</a>
      </div>
    </div>
  </div>
</div>
<!-- Modal desactivar-->
<div class="modal fade" id="confirmDesactivarModal" tabindex="-1" aria-labelledby="confirmDesactivarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmDesactivarModalLabel">Confirmar Desactivar</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ¿Estás seguro de que deseas Desactivar este inquilino?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <a id="confirmDesactivarButton" href="#" class="btn btn-danger">Desactivar</a>
      </div>
    </div>
  </div>
</div>
<!-- Modal activar-->
<div class="modal fade" id="confirmActivarModal" tabindex="-1" aria-labelledby="confirmActivarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmActivarModalLabel">Confirmar Activar</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ¿Estás seguro de que deseas Activar este inquilino?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <a id="confirmActivarButton" href="#" class="btn btn-danger">Activar</a>
      </div>
    </div>
  </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var toastElement = document.getElementById("successToast");
        var toast = new bootstrap.Toast(toastElement);
        
        @if (TempData["Mensaje"] != null)
        {
            <text>
                toast.show();
            </text>
        }
   
    });
    function confirmDelete(element) {
        var id = element.getAttribute("data-id");
        var url = "@Url.Action("Eliminar", "Inquilino")" + "/" + id;
        document.getElementById("confirmDeleteButton").setAttribute("href", url);
        var myModal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
        myModal.show();
    }
     function confirmDesactivar(element) {
        var id = element.getAttribute("data-id");
        var url = "@Url.Action("Desactivar", "Inquilino")" + "/" + id;
        document.getElementById("confirmDesactivarButton").setAttribute("href", url);
        var myModal = new bootstrap.Modal(document.getElementById('confirmDesactivarModal'));
        myModal.show();
    }
    function confirmActivate(element) {
        var id = element.getAttribute("data-id");
        var url = "@Url.Action("Activar", "Inquilino")" + "/" + id;
        document.getElementById("confirmActivarButton").setAttribute("href", url);
        var myModal = new bootstrap.Modal(document.getElementById('confirmActivarModal'));
        myModal.show();
    }
</script>
