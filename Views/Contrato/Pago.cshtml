@model List<proyecto_inmobiliaria2_mvc_guardia_lucero.Models.Pagos>
@{
    ViewData["Title"] = "Pagos Asocaidos al Contratos";
}
<div class="text-center">
	<h1 class="display-4">Pagos Asocaidos al Contratos</h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
        <th>#</th>
        <th>Monto</th>
        <th>Detalle</th>
        <th>Fecha del pago</th>
        <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    @if (Model != null && Model.Any())
{
    int i = 1;
    foreach (var p in Model)
    {
      if(p.Estado){
        <tr>
            <td>@i</td>
            <td>@Html.DisplayFor(modelp => p.Monto)</td>
            <td>@Html.DisplayFor(modelp => p.Detalle)</td>
            <td>@p.Fecha_creacion.ToString("dd/MM/yyyy")</td>
            <td>
    <div class="dropdown position-static">
        <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i> <!-- Icono de 3 puntos -->
        </button>
        <ul class="dropdown-menu">
            <li>
                <a href="javascript:void(0);" 
                      data-id="@p.Id_pago" 
                      class="dropdown-item" 
                      onclick="confirmDelete(this)">
                        <i class="fa-solid fa-trash"></i> Anular Pago
                  </a>
            </li>
        </ul>
    </div>
</td>
        </tr>
        i++;
        }else{
          <tr class="table-danger">
            <td>@i</td>
            <td>@Html.DisplayFor(modelp => p.Monto)</td>
            <td>@Html.DisplayFor(modelp => p.Detalle)</td>
            <td>@p.Fecha_creacion.ToString("dd/MM/yyyy")</td>
            <td>
          <div class="dropdown position-static">
              <button class="btn btn-sm btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="bi bi-three-dots-vertical"></i> <!-- Icono de 3 puntos -->
              </button>
              <ul class="dropdown-menu">
                  <li>
                      <a href="javascript:void(0);" 
                            data-id="@p.Id_pago" 
                            class="dropdown-item" 
                            onclick="confirmDelete(this)">
                              <i class="fa-solid fa-trash"></i> Anular Pago
                        </a>
                  </li>
              </ul>
          </div>
      </td>
              </tr>
              i++;
        }
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center text-muted">No hay Pagos cargados</td>
    </tr>
}
  </tbody>
</table>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary agregar" data-bs-toggle="modal" data-bs-target="#agregarModal"><i class="fa-solid fa-plus"></i></button>
<div class="mb-3 d-flex">
    <p class="me-3">Monto total: @ViewBag.contrato.Monto_total</p>
    <p class="me-3">Monto a Pagar: @ViewBag.contrato.Monto_a_pagar</p>
    <p class="me-3">Fecha Desde: @ViewBag.contrato.Fecha_desde.ToString("dd/MM/yyyy")</p>
    <p class="me-3">Fecha Hasta: @ViewBag.contrato.Fecha_hasta.ToString("dd/MM/yyyy")</p>
    <p class="me-3">Contrato Completado: @(ViewBag.contrato.Contrato_completado ? "SI" : "NO")</p>
    <p class="me-3">Meses: @ViewBag.contrato.Meses</p>
</div>
<!-- PAGINACIÓN -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <!-- Botón Anterior -->
        <li class="page-item @(ViewBag.PaginaActual == 1 || !ViewBag.Registros ? "disabled" : "")">
            <a class="page-link" 
               href="@Url.Action("Index", new { pagina = ViewBag.PaginaActual - 1 })" 
               tabindex="-1">
                Anterior
            </a>
        </li>

        <!-- Números de página -->
        @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
        {
            <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = i })">@i</a>
            </li>
        }

        <!-- Botón Siguiente -->
        <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas || !ViewBag.Registros ? "disabled" : "")">
            <a class="page-link" 
               href="@Url.Action("Index", new { pagina = ViewBag.PaginaActual + 1 })">
                Siguiente
            </a>
        </li>
    </ul>
</nav>
<!-- Modal -->
<div class="modal fade" id="agregarModal" tabindex="-1" aria-labelledby="agregarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="agregarModalLabel">Agregar Pago</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
<form asp-action="AgregarPago" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="InputDetalle" class="form-label">Detalle</label>
        <input type="text" class="form-control" id="InputDetalle" name="Detalle" required>
          <input type="hidden" id="Id_contrato" name="Id_contrato" value="@ViewBag.contrato.Id_contrato" />
        <div class="invalid-feedback">El Detalle del pago es obligatorio.</div>
    </div>
    <div class="mb-3">
        <label for="InputMonto" class="form-label">Monto</label>
        <input type="text" class="form-control" id="InputMonto" name="Monto" value="@(ViewBag.contrato.Monto)" readonly required>
        <div class="invalid-feedback">El Monto del pago es obligatorio.</div>
    </div>
  

    <button type="submit" class="btn btn-primary">Agregar</button>
</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!-- Modal eliminar-->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirmar Anulacion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ¿Estás seguro de que deseas Anular este Pago?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <a id="confirmDeleteButton" href="#" class="btn btn-danger">Anular</a>
      </div>
    </div>
  </div>
</div>

<script>
        function confirmDelete(element) {
        var Id_pago = element.getAttribute("data-id");
        var Id_contrato = @ViewBag.contrato.Id_contrato;
        var url = `@Url.Action("AnularPago", "Contrato")?Id_pago=${Id_pago}&Id_contrato=${Id_contrato}`;
        document.getElementById("confirmDeleteButton").setAttribute("href", url);
        var myModal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
        myModal.show();
    }

</script>