    const fechaHastaInput = document.getElementById('InputFecha_hasta');
    const montoTotalInput = document.getElementById('InputMonto_total');

    // Función para calcular la fecha de fin
    function calcularFechaHasta() {
        if (fechaDesdeInput.value && mesesInput.value) {
            const fechaDesde = new Date(fechaDesdeInput.value + 'T00:00:00'); // Asegura la zona horaria correcta
            const meses = parseInt(mesesInput.value, 10);
            fechaDesde.setMonth(fechaDesde.getMonth() + meses);
            // Formato YYYY-MM-DD
            fechaHastaInput.value = fechaDesde.toISOString().split('T')[0];
        }
    }
        // Función para calcular el monto total
    function calcularMontoTotal() {
        if (montoInputr.value && mesesInput.value) {
            const monto = parseFloat(montoInputr.value);
            const meses = parseInt(mesesInput.value, 10);
            const total = monto * meses;
            montoTotalInput.value = total.toFixed(2); // Formato con 2 decimales
        }
    }

    // Escuchamos los cambios en los inputs para recalcular en vivo
    montoInputr.addEventListener('input', calcularMontoTotal);
    mesesInput.addEventListener('input', () => {
        calcularFechaHasta();
        calcularMontoTotal();
    });
    fechaDesdeInput.addEventListener('input', calcularFechaHasta);
    
