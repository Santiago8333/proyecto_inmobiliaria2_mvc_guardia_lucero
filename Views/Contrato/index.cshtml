        var idContratoOriginal = element.getAttribute("data-id");
        
        // Usamos fetch para buscar los datos del contrato original al servidor
        fetch(`/Contrato/ObtenerDatosParaRenovar/${idContratoOriginal}`)
            .then(response => {
                if (!response.ok) {
                    throw new Error('No se pudo obtener los datos del contrato.');
                }
                return response.json();
            })
            .then(data => {
                // Rellenamos el formulario con los datos obtenidos
                document.getElementById('Id_contrato_original').value = idContratoOriginal;
                document.getElementById('Id_inquilinor').value = data.id_inquilino;
                document.getElementById('Id_inmuebler').value = data.id_inmueble;
                
                // Sugerimos el mismo monto que el contrato anterior
                montoInputr.value = data.monto;

                // La nueva fecha de inicio es el día después de que terminó el contrato anterior
                const fechaFinAnterior = new Date(data.fecha_hasta);
                fechaFinAnterior.setDate(fechaFinAnterior.getDate() + 1);
                fechaDesdeInput.value = fechaFinAnterior.toISOString().split('T')[0];
                
                // Calculamos los valores iniciales
                calcularFechaHasta();
                calcularMontoTotal();

                // Mostramos el modal
                var myModal = new bootstrap.Modal(document.getElementById('renovarModal'));
                myModal.show();
            })
            .catch(error => {
                console.error('Error:', error);
                alert('No se pudieron cargar los datos para la renovación.');
            });
    }
</script>
