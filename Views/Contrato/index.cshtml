@model List<proyecto_inmobiliaria2_mvc_guardia_lucero.Models.Contratos>
@{
    ViewData["Title"] = "Contratos";
}
<div class="container mt-5" style="padding-top: 10px;">
<div class="row">
<div class="col-md-12 history bg-light border-right">
<h1>Contratos</h1>
<form asp-action="Index" method="get" class="row g-3 mb-4">
    <div class="col-md-2">
        <label for="fechaInicio" class="form-label">Desde</label>
        <input type="date" name="fechaInicio" id="fechaInicio" class="form-control" value="@(ViewBag.FechaInicioFilter?.ToString("yyyy-MM-dd"))">
    </div>
    <div class="col-md-2">
        <label for="fechaFin" class="form-label">Hasta</label>
        <input type="date" name="fechaFin" id="fechaFin" class="form-control" value="@(ViewBag.FechaFinFilter?.ToString("yyyy-MM-dd"))">
    </div>
    <div class="col-md-2">
        <label for="expiracion" class="form-label">Próximos a Vencer</label>
        <select name="expiracion" id="expiracion" class="form-select">
            <option value="">Cualquier fecha</option>
            <option value="30" selected="@(ViewBag.ExpiracionFilter == 30)">En 30 días</option>
            <option value="60" selected="@(ViewBag.ExpiracionFilter == 60)">En 60 días</option>
            <option value="90" selected="@(ViewBag.ExpiracionFilter == 90)">En 90 días</option>
        </select>
    </div>
    <div class="col-md-2">
        <label for="email" class="form-label">Email del Inquilino</label>
        <input type="text" name="email" id="email" class="form-control" value="@ViewBag.EmailFilter" placeholder="ejemplo@dominio.com">
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary me-2">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
    </div>
</form>
